<div class="container">
  <div class="row g-2">
        <div class="col-6">
            <div class="p-3 border bg-light">
            <h1 class="fw-bold">Last Lauch</h1>
                <p>Name <%= @latest['name'] %></p>
                <p>Date <%= @latest['date_local'] %></p>   
            </div>
        </div>
        
        <div class="col-6">
        <div class="p-3 border bg-light">
        <h1 class="fw-bold">Next Lauch</h1>
            <p>Name <%= @next['name'] %></p>
            <p>Date <%= @next['date_local'] %></p>
        </div>
        </div>

        <div class="col-6">
            <div class="p-3 border bg-light">
                <h1 class="fw-bold">Pastes Lauches</h1>
                <% @past['docs'].each do |lauch| %>
                    <% lauch.each do |property, value| %>
                    <p><%= property %><%= value%></p>
                    <% end %> 
                <% end %> 
            </div>
        </div>
    
        <div class="col-6">
            <div class="p-3 border bg-light">
                <h1 class="fw-bold">Upcoming Lauches</h1>
                <% @upcoming['docs'].each do |lauch| %>
                    <% lauch.each do |property, value| %>
                    <p><%= property %><%= value%></p>
                    <% end %> 
                <% end %> 
            </div>
        </div>

    </div>
</div>