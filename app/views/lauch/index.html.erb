<div class="container">
  <div class="row g-2">
        <div class="col-6">
            <div class="p-3 border bg-light">
            <h1 class="fw-bold">Last Lauch</h1>
                <p>Name <%= @latest['name'] %></p>
                <p>Date <%= @latest['date_local'] %></p>   
            </div>
        </div>
        
        <div class="col-6">
        <div class="p-3 border bg-light">
        <h1 class="fw-bold">Next Lauch</h1>
            <p>Name <%= @next['name'] %></p>
            <p>Date <%= @next['date_local'] %></p>
        </div>
        </div>

        <div class="col-6"> 
            <div class="p-3 border bg-light">
                <h3 class="fw-bold">Pastes Lauches</h3>
               <table class="table">
               <thead>
                   <tr>
                   <th scope="col">Flight Number</th>
                   <th scope="col">Name</th>
                   <th scope="col">Lanch Date</th>
                   </tr>
               </thead>
               <tbody>
               <% @past['docs'].each do |lauch| %>                   
                   <tr>
                      <% lauch.except("id").each do |property, value| %>                    
                         <td><%= value %></td>
                       <% end %>                    
                   </tr>
                 <% end %>                    
               </tbody>
               </table>
            </div>
        </div>
    
         <div class="col-6"> 
            <div class="p-3 border bg-light">
                <h3 class="fw-bold">Upcoming Lauches</h3>
               <table class="table">
               <thead>
                   <tr>
                   <th scope="col">Flight Number</th>
                   <th scope="col">Name</th>
                   <th scope="col">Upcoming Date</th>
                   </tr>
               </thead>
               <tbody>
               <% @upcoming['docs'].each do |lauch| %>                  
                   <tr>
                      <% lauch.except("id").each do |property, value| %>                    
                         <td><%= value %></td>
                       <% end %>                    
                   </tr>
                 <% end %>                    
               </tbody>
               </table>
            </div>
        </div>

    </div>
</div>